{
  "name": "@cosmocoder/mcp-web-docs",
  "version": "0.0.0-development",
  "description": "MCP server for crawling and indexing web documentation - works with any website",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "documentation",
    "indexing",
    "search",
    "crawler",
    "ai",
    "llm",
    "cursor",
    "claude",
    "semantic-search",
    "vector-search"
  ],
  "homepage": "https://github.com/cosmocoder/mcp-web-docs#readme",
  "bugs": {
    "url": "https://github.com/cosmocoder/mcp-web-docs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cosmocoder/mcp-web-docs.git"
  },
  "license": "MIT",
  "author": "cosmocoder",
  "type": "module",
  "main": "build/index.js",
  "types": "./build/index.d.ts",
  "bin": {
    "mcp-web-docs": "build/index.js"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "tsc -w",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:types": "tsc --noEmit",
    "prettier": "prettier --write src/",
    "prettier:ci": "prettier --check src/",
    "clean": "rm -rf build",
    "postinstall": "npx playwright install",
    "prepare": "husky",
    "create-release": "semantic-release"
  },
  "dependencies": {
    "@andersmyrmel/vard": "1.2.0",
    "@lancedb/lancedb": "0.23.0",
    "@modelcontextprotocol/sdk": "1.26.0",
    "@mozilla/readability": "0.6.0",
    "cheerio": "1.2.0",
    "cli-progress": "3.12.0",
    "crawlee": "3.15.3",
    "default-browser": "5.5.0",
    "fastembed": "2.1.0",
    "jsdom": "27.4.0",
    "node-html-markdown": "2.0.0",
    "pdfjs-dist": "5.4.624",
    "playwright": "1.58.0",
    "quick-lru": "7.3.0",
    "safe-regex2": "5.0.0",
    "semver": "7.7.3",
    "sqlite": "5.1.1",
    "sqlite3": "5.1.7",
    "typescript": "5.9.3",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@eslint/js": "9.39.2",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/github": "12.0.3",
    "@semantic-release/npm": "13.1.3",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@types/cli-progress": "3.11.6",
    "@types/jsdom": "27.0.0",
    "@types/node": "22.15.29",
    "@types/semver": "7.7.1",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "9.39.2",
    "globals": "17.3.0",
    "husky": "9.1.7",
    "jiti": "2.6.1",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "typescript-eslint": "8.53.1",
    "vitest": "4.0.18",
    "vitest-fetch-mock": "0.4.5"
  },
  "engines": {
    "node": ">=22.19.0"
  },
  "engine-strict": true,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "lint-staged": {
    "src/**/*.md": [
      "npm run prettier"
    ],
    "src/**/*.{js,ts}": [
      "npm run lint:fix",
      "npm run prettier"
    ]
  }
}
